model foods {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  // v          Int          @map("__v")
  calories   Int
  name       String
  categories categories[]
}

model categories {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  // v      Int    @map("__v")
  type   String
  description String
  food   foods?  @relation(fields: [foodId], references: [id])
  foodId String? @db.ObjectId
}
